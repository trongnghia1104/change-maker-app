<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:text="Price:"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:text="2.34"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/price_label"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/purple_200"
            android:text="Android"
            android:textColor="#5E35B1"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                style="@style/buttonRow">
                <Button
                    android:id="@+id/btn_label_1"
                    style="@style/button"
                    android:text="1"/>

                <Button
                    android:id="@+id/btn_label_2"
                    style="@style/button"
                    android:text="2"/>

                <Button
                    android:id="@+id/btn_label_3"
                    style="@style/button"
                    android:text="3"/>
            </LinearLayout>

            <LinearLayout
                style="@style/buttonRow">
                <Button
                    android:id="@+id/btn_label_4"
                    style="@style/button"
                    android:text="4"/>

                <Button
                    android:id="@+id/btn_label_5"
                    style="@style/button"
                    android:text="5"/>

                <Button
                    android:id="@+id/btn_label_6"
                    style="@style/button"
                    android:text="6"/>
            </LinearLayout>

            <LinearLayout
                style="@style/buttonRow">
                <Button
                    android:id="@+id/btn_label_7"
                    style="@style/button"
                    android:text="7"/>

                <Button
                    android:id="@+id/btn_label_8"
                    style="@style/button"
                    android:text="8"/>

                <Button
                    android:id="@+id/btn_label_9"
                    style="@style/button"
                    android:text="9"/>
            </LinearLayout>

            <LinearLayout
                style="@style/buttonRow">
                <Button
                    android:id="@+id/btn_label_0"
                    style="@style/button"
                    android:text="0"/>

                <Button
                    android:id="@+id/btn_label_clear"
                    style="@style/buttonClear"
                    android:text="Clear"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>