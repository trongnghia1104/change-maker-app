<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/priceLabel"
        style="@style/priceBarPortrait"
        android:layout_marginStart="50dp"
        android:text="@string/priceLabelText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentAmountLabel"
        style="@style/priceBarPortrait"
        android:layout_marginStart="16dp"
        android:text="@string/currentAmountLabelText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/priceLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:baselineAligned="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/twentyDollarLabel"
                style="@style/billCol1"
                android:layout_marginTop="0dp"
                android:text="@string/twentyDollarLabelText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/twentyDollarQtyLabel"
                style="@style/billCol2"
                android:layout_marginTop="0dp"
                android:text="@string/twentyDollarQtyLabelText"
                app:layout_constraintStart_toEndOf="@+id/twentyDollarLabel"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tenDollarLabel"
                style="@style/billCol1"
                android:text="@string/tenDollarLabelText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/twentyDollarLabel" />

            <TextView
                android:id="@+id/tenDollarQtyLabel"
                style="@style/billCol2"
                android:text="@string/tenDollarQtyLabelText"
                app:layout_constraintStart_toEndOf="@+id/tenDollarLabel"
                app:layout_constraintTop_toBottomOf="@+id/twentyDollarQtyLabel" />

            <TextView
                android:id="@+id/fiveDollarLabel"
                style="@style/billCol1"
                android:text="@string/fiveDollarLabelText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tenDollarLabel" />

            <TextView
                android:id="@+id/fiveDollarQtyLabel"
                style="@style/billCol2"
                android:text="@string/fiveDollarQtyLabelText"
                app:layout_constraintStart_toEndOf="@+id/fiveDollarLabel"
                app:layout_constraintTop_toBottomOf="@+id/tenDollarQtyLabel" />

            <TextView
                android:id="@+id/oneDollarLabel"
                style="@style/billCol1"
                android:text="@string/oneDollarLabelText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fiveDollarLabel" />

            <TextView
                android:id="@+id/oneDollarQtyLabel"
                style="@style/billCol2"
                android:text="@string/oneDollarQtyLabelText"
                app:layout_constraintStart_toEndOf="@+id/oneDollarLabel"
                app:layout_constraintTop_toBottomOf="@+id/fiveDollarQtyLabel" />

            <TextView
                android:id="@+id/twentyFiveCentLabel"
                style="@style/billCol1"
                android:text="@string/twentyFiveCentLabelText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/oneDollarLabel" />

            <TextView
                android:id="@+id/twentyFiveCentQtyLabel"
                style="@style/billCol2"
                android:text="@string/twentyFiveCentQtyLabelText"
                app:layout_constraintStart_toEndOf="@+id/twentyFiveCentLabel"
                app:layout_constraintTop_toBottomOf="@+id/oneDollarQtyLabel" />

            <TextView
                android:id="@+id/tenCentLabel"
                style="@style/billCol1"
                android:text="@string/tenCentLabelText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/twentyFiveCentLabel" />

            <TextView
                android:id="@+id/tenCentQtyLabel"
                style="@style/billCol2"
                android:text="@string/tenCentQtyLabelText"
                app:layout_constraintStart_toEndOf="@+id/tenCentLabel"
                app:layout_constraintTop_toBottomOf="@+id/twentyFiveCentQtyLabel" />

            <TextView
                android:id="@+id/fiveCentLabel"
                style="@style/billCol1"
                android:text="@string/fiveCentLabelText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tenCentLabel" />

            <TextView
                android:id="@+id/fiveCentQtyLabel"
                style="@style/billCol2"
                android:text="@string/fiveCentQtyLabelText"
                app:layout_constraintStart_toEndOf="@+id/fiveCentLabel"
                app:layout_constraintTop_toBottomOf="@+id/tenCentQtyLabel" />

            <TextView
                android:id="@+id/oneCentLabel"
                style="@style/billCol1"
                android:text="@string/oneCentLabelText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fiveCentLabel" />

            <TextView
                android:id="@+id/oneCentQtyLabel"
                style="@style/billCol2"
                android:text="@string/oneCentQtyLabelText"
                app:layout_constraintStart_toEndOf="@+id/oneCentLabel"
                app:layout_constraintTop_toBottomOf="@+id/fiveCentQtyLabel" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                style="@style/buttonRow">
                <Button
                    android:id="@+id/btnLabelOne"
                    style="@style/button"
                    android:text="@string/btnLabelOneText"/>

                <Button
                    android:id="@+id/btnLabelTwo"
                    style="@style/button"
                    android:text="@string/btnLabelTwoText"/>

                <Button
                    android:id="@+id/btnLabelThree"
                    style="@style/button"
                    android:text="@string/btnLabelThreeText"/>
            </LinearLayout>

            <LinearLayout
                style="@style/buttonRow">
                <Button
                    android:id="@+id/btnLabelFour"
                    style="@style/button"
                    android:text="@string/btnLabelFourText"/>

                <Button
                    android:id="@+id/btnLabelFive"
                    style="@style/button"
                    android:text="@string/btnLabelFiveText"/>

                <Button
                    android:id="@+id/btnLabelSix"
                    style="@style/button"
                    android:text="@string/btnLabelSixText"/>
            </LinearLayout>

            <LinearLayout
                style="@style/buttonRow">
                <Button
                    android:id="@+id/btnLabelSeven"
                    style="@style/button"
                    android:text="@string/btnLabelSevenText"/>

                <Button
                    android:id="@+id/btnLabelEight"
                    style="@style/button"
                    android:text="@string/btnLabelEightText"/>

                <Button
                    android:id="@+id/btnLabelNine"
                    style="@style/button"
                    android:text="@string/btnLabelNineText"/>
            </LinearLayout>

            <LinearLayout
                style="@style/buttonRow">
                <Button
                    android:id="@+id/btnLabelZero"
                    style="@style/button"
                    android:text="@string/btnLabelZeroText"/>

                <Button
                    android:id="@+id/btnLabelClear"
                    style="@style/buttonClear"
                    android:text="@string/btnLabelClearText"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
