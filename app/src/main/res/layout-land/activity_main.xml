<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/priceLabel"
        style="@style/priceBarHorizontal"
        android:layout_marginStart="100dp"
        android:text="@string/priceLabelText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentAmountLabel"
        style="@style/priceBarHorizontal"
        android:layout_marginStart="16dp"
        android:text="@string/currentAmountLabelText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/priceLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"

        android:weightSum="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple_200"
            android:text="Android"
            android:textColor="#5E35B1"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                style="@style/buttonRow">

                <Button
                    android:id="@+id/btnLabelOne"
                    style="@style/button"
                    android:text="@string/btnLabelOneText" />

                <Button
                    android:id="@+id/btnLabelTwo"
                    style="@style/button"
                    android:text="@string/btnLabelTwoText" />

                <Button
                    android:id="@+id/btnLabelThree"
                    style="@style/button"
                    android:text="@string/btnLabelThreeText" />

                <Button
                    android:id="@+id/btnLabelFour"
                    style="@style/button"
                    android:text="@string/btnLabelFourText" />
            </LinearLayout>

            <LinearLayout
                style="@style/buttonRow">

                <Button
                    android:id="@+id/btnLabelFive"
                    style="@style/button"
                    android:text="@string/btnLabelFiveText" />

                <Button
                    android:id="@+id/btnLabelSix"
                    style="@style/button"
                    android:text="@string/btnLabelSixText" />

                <Button
                    android:id="@+id/btnLabelSeven"
                    style="@style/button"
                    android:text="@string/btnLabelSevenText" />

                <Button
                    android:id="@+id/btnLabelEight"
                    style="@style/button"
                    android:text="@string/btnLabelEight" />
            </LinearLayout>

            <LinearLayout
                style="@style/buttonRow">

                <Button
                    android:id="@+id/btnLabelNine"
                    style="@style/button"
                    android:text="@string/btnLabelNineText" />

                <Button
                    android:id="@+id/btnLabelZero"
                    style="@style/button"
                    android:text="@string/btnLabelZeroText" />

                <Button
                    android:id="@+id/btnLabelClear"
                    style="@style/buttonClear"
                    android:text="@string/btnLabelClear" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>